{
  "name": "agents-cli",
  "version": "0.1.0",
  "description": "Multi-agent workflow engine for agentic IDEs using OpenAI Agents SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "agents-cli": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\" \"tests/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\" \"tests/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "agents",
    "openai",
    "mcp",
    "ide-integration",
    "typescript",
    "workflow-engine",
    "cli",
    "multi-agent"
  ],
  "author": "Agents CLI Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sofatutor/agents-cli.git"
  },
  "bugs": {
    "url": "https://github.com/sofatutor/agents-cli/issues"
  },
  "homepage": "https://sofatutor.github.io/agents-cli",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "SECURITY.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.3",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "20.19.5",
    "npm": "10.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@openai/agents": "^0.1.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "zod": "^3.25.76"
  }
}
